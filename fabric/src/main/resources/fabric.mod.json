  "authors": [
    "Sammy L. Koch",
    "Luke A. Hanssen"
  ],
  "contact": {
    "homepage": "https://tweaked-programs.cc/",
    "sources": "https://github.com/tweaked-programs/cccbridge"
  },

  "license": "Apache-2.0",
  "icon": "assets/cccbridge/icon.png",

